<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="io.databoxtech.r2_viewer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:theme="@style/Theme.AppCompat"
        android:usesCleartextTraffic="true">

        <activity android:name=".epub.MainActivity"
            android:clearTaskOnLaunch="true">
        </activity>

        <activity
            android:name=".epub.EpubActivity"
            android:label="@string/title_activity_epub" />

        <activity
            android:name="io.databoxtech.r2epub.outline.R2OutlineActivity"
            android:label="@string/title_activity_outline" />
    </application>
</manifest>
